{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex justify-center items-center h-full w-full">
        {{ form_start(registrationForm) }}
            <div class="flex flex-col items-start gap-4 bg-[#f0f0f0] border border-gray-300 shadow-inner w-fit">
                <div class="p-1 w-full">
                    <div class="relative bg-[#000080] w-full">
                        <h1 class="text-white text-center font-thin">Inscription</h1>
                        <button class="absolute top-[2px] right-[2px] w-5 h-5 text-sm bg-[#c0c0c0] border border-black text-black shadow-[inset_-1px_-1px_0_#fff,inset_1px_1px_0_#404040]">?</button>
                    </div>
                </div>

                <div class="flex flex-col items-start p-4 gap-4">
                    {{ form_row(registrationForm.username, {
                        'label': 'Nom d\'utilisateur',
                        'attr': {
                            'class': 'px-2 py-1 border border-gray-400 bg-gray-100 text-black shadow-inner focus:outline-none focus:ring-1 focus:ring-blue-400'
                        },
                        'label_attr': {
                            'class': 'text-sm font-thin text-black block mb-1'
                        },
                        'row_attr': {
                            'class': 'flex flex-col items-start'
                        }
                    }) }}

                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Mot de passe',
                        'attr': {
                            'class': 'px-2 py-1 border border-gray-400 bg-gray-100 text-black shadow-inner focus:outline-none focus:ring-1 focus:ring-blue-400'
                        },
                        'label_attr': {
                            'class': 'text-sm font-thin text-black block mb-1'
                        },
                        'row_attr': {
                            'class': 'flex flex-col items-start'
                        }
                    }) }}

                    {{ form_row(registrationForm.agreeTerms, {
                        'label': 'Accepter les termes',
                        'attr': {
                            'class': 'px-2 py-1 border border-gray-400 bg-gray-100 text-black shadow-inner focus:outline-none focus:ring-1 focus:ring-blue-400'
                        },
                        'label_attr': {
                            'class': 'text-sm font-thin text-black block mb-1'
                        },
                        'row_attr': {
                            'class': 'flex flex-row items-center space-x-2'
                        }
                    }) }}

                    <button type="submit" class="px-3 py-0.5 text-sm bg-[#c0c0c0] border border-black text-black shadow-[inset_-1px_-1px_0_#fff,inset_1px_1px_0_#404040]">
                        S'inscrire
                    </button>

                    {{ form_errors(registrationForm) }}

                    <a href="{{ path('app_login') }}" class="text-sm text-[#000080] hover:underline">J'ai déjà un compte</a>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
